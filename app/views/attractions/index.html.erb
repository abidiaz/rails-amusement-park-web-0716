<div class="container"  role="main">
  <h1>Listing attractions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Picture</strong></td>
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>

    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= image_tag "http://www.allthingsclipart.com/05/amusement.park.05.jpg", width:100 %></td>
        <td><%= attraction.name %></td>
        <td><%= attraction.tickets %></td>
        <td>
          <% if current_user.admin? %>
            <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
          <% else %>
             <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
          <% end %>
         </td>
      </tr>
    <% end %>
      
</table>
  <p><%= link_to "New Attraction", new_attraction_path %></p>

</div>
